class Solution {
public:
    vector<string> divideString(string s, int k, char fill) {
        vector<string> ans;
        int i = 0;

        while (i + k <= s.size()) {
            ans.push_back(s.substr(i, k));
            i += k;
        }

        if (i < s.size()) {
            string last = s.substr(i);
            while (last.size() < k) {
                last += fill;
            }
            ans.push_back(last);
        }

        return ans;
    }
};
